<%
  script_files = [
	'com/jquery/jquery-1.6.4.min',
	'jquery-ui-1.8.2.custom.min',
	'i18n',
	'translations',
	'rails',
	'runcoco'
  ]
-%>

<%= javascript_include_tag script_files %>

<%= javascript_tag do -%>
  var RunCoCo = {
    relativeUrlRoot: '<%= configuration(:relative_url_root) %>'
  }
  I18n.locale = '<%= I18n.locale %>';
<% end -%>

<% if @javascripts[:datepicker] -%>
  <%= javascript_include_tag("datepicker") %>
<% end -%>

<% if (@javascripts[:gmap_geo] || @javascripts[:gmap_show]) && configuration(:gmap_api_key).present? -%>
  <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=<%= configuration(:gmap_api_key) %>" type="text/javascript"></script>
  <%- if @javascripts[:gmap_geo] -%>
    <%= javascript_include_tag("gmap-geo-3") %>
  <%- end -%>
  <%- if @javascripts[:gmap_show] -%>
    <%= javascript_include_tag("gmap-show") %>
  <%- end -%>
<% end -%>

<%- if @javascripts[:uploadify] && configuration(:uploadify) -%>
  <%= stylesheet_link_tag "uploadify"  %>
  <%= javascript_tag do -%>
    RunCoCo['uploadify'] = {
      maxUploadSize: <%= configuration(:max_upload_size) %>,
      fileExt: '<%= uploadify_file_extensions %>',
      fileDesc: '<%= uploadify_file_desc %>'
    };
    RunCoCo['authenticityToken'] = '<%= form_authenticity_token if protect_against_forgery? %>';
    RunCoCo['sessionKeyName'] = '<%= session_key_name %>';
    RunCoCo['sessionKey'] = '<%= cookies[session_key_name] %>';
  <%- end -%>
  <%= javascript_include_tag "uploadify/swfobject", "uploadify/jquery.uploadify.v2.1.4.min", "uploadify/attachments" %>
<%- end -%>

<% if @javascripts[:collapsible] -%>
  <%= javascript_include_tag("jquery.collapsible") %>
  <%= javascript_tag do -%>
  $(document).ready(function() {
    $("fieldset.collapsible").collapse();
    $("fieldset.collapsed").collapse( { closed: true } );
  });
  <%- end -%>
<% end -%>

<% if @javascripts[:flowplayer] -%>
  <%= javascript_include_tag("flowplayer/flowplayer-3.2.6.min") %>
<% end -%>

<% if @javascripts[:prettyphoto] -%>
  <%= stylesheet_link_tag("prettyPhoto") %>
  <%= javascript_include_tag("jquery.prettyPhoto-3.0.3.custom", "prettyphoto") %>
<% end -%>

<% if @javascripts[:clone_metadata] -%>
  <%= javascript_include_tag("clone-metadata") %>
<% end -%>
