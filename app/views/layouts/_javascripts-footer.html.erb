<%
  script_files = [
  'com/jquery/jquery-1.6.4.min',
  'jquery-ui-1.8.2.custom.min',
  'i18n',
  'translations',
  'rails',
  'runcoco'
  ]
-%>

<%= javascript_include_tag script_files %>

<% if @javascripts[:collapsible] -%>
  <%= javascript_include_tag("jquery.collapsible") %>
  <%= javascript_tag do -%>
  jQuery(document).ready(function() {
    jQuery("fieldset.collapsible").collapse();
    jQuery("fieldset.collapsed").collapse( { closed: true } );
  });
  <%- end -%>
<% end -%>

<%- if @javascripts[:uploadify] && configuration(:uploadify) -%>
  <%= javascript_include_tag "uploadify/swfobject", "uploadify/jquery.uploadify.v2.1.4.min", "uploadify/attachments" %>
<%- end -%>

<% if @javascripts[:attachments] -%>
  <%= javascript_include_tag("attachments") %>
<% end -%>

<% if (@javascripts[:gmap_locate] || @javascripts[:gmap_display]) && configuration(:gmap_api_key).present? -%>
  
  <script src="http://maps.googleapis.com/maps/api/js?&sensor=false&libraries=places&key=<%= configuration(:gmap_api_key) %>" type="text/javascript"></script>
  <%= javascript_include_tag("gmap-geo.v3") %>
	
  <% if @javascripts[:gmap_locate] %>
	  <%= javascript_include_tag "gmap-locate" %>
  <% end %>
	
  <% if @javascripts[:gmap_display] %>
	<%= javascript_include_tag "gmap-display" %>
  <% end %>
  
<% end -%>

<% if @javascripts[:flowplayer] -%>
  <%= javascript_include_tag("flowplayer/flowplayer-3.2.6.min") %>
  <%= javascript_tag do -%>
	flowplayer("player", "<%= javascript_path("flowplayer/flowplayer-3.2.7.swf") %>");
	<% end %>
<% end -%>

<% if @javascripts[:prettyphoto] -%>
  <%= stylesheet_link_tag("prettyPhoto") %>
  <%= javascript_include_tag("jquery.prettyPhoto-3.0.3.custom", "prettyphoto") %>
<% end -%>

<% if @javascripts[:clone_metadata] -%>
  <%= javascript_include_tag("clone-metadata") %>
<% end -%>

<% if @javascripts[:language_other] -%>
  <%= javascript_include_tag("language-other") %>
<% end -%>

<% if @javascripts[:generate_password] -%>
  <%= javascript_include_tag("generate-password") %>
<% end -%>

<% if @javascripts[:datepicker] -%>
  <%= javascript_include_tag("datepicker") %>
<% end -%>
