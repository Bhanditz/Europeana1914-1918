<% 
  provide :title, t('views.tags.delete.title') 
  taggable_type = taggable_type(@taggable)
%>

<div class="section top">
  
  <h2><%= yield :title %></h2>
  
  <p><%= t 'views.tags.delete.question' %></p>

  <%= semantic_form_for @tag, :url => send(:"#{taggable_type}_tag_path", @taggable, @tag), :html => { :method => :delete } do |form| %>
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button :label => t('actions.delete') %>
      <%= form_cancel_link @taggable %>
    <% end %>
  <% end %>

</div>
