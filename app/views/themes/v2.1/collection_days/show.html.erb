<% provide :title, collection_day_summary(@collection_day) %>

<div class="section top">
  
  <h2><%= yield :title %></h2>

  <%- unless @collection_day.description.blank? -%>
    <p><%= @collection_day.description %></p>
  <%- end -%>
  <p><%= link_to @collection_day.url, @collection_day.url %></p>
  <p><%= @collection_day.contact.full_name %></p>
  <p><address>
    <%= @collection_day.contact.street_address %><br />
    <%= @collection_day.contact.locality %><br />
    <%- unless @collection_day.contact.region.blank? -%>
      <%= @collection_day.contact.region %><br />
    <%- end -%>
    <%= @collection_day.contact.postal_code %><br />
    <%= @collection_day.contact.country %>
  </address></p>
  <p><%= link_to t('activerecord.models.contribution').pluralize, explore_collection_path('collection_day', @collection_day.code, :qf => { :index => 'c' }) %></p>
  
</div>
