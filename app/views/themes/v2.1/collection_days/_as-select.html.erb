<%
	html = ''

  if @collection_days.present?
		html += '<div>'
			html += t( 'views.collection_days.cant-find-collection-day' )
			html += ' '
			html += '<select class="chosen-select" data-placeholder="' + t( 'views.collection_days.select-collection-day' ) + '">'
				html += '<option></option>'

				for collection_day in @collection_days
					html += '<optgroup label="' + t( "countries.#{collection_day.contact.country}" ) + '">'
						if collection_day.has_contributions?
							html += '<option value="' + collection_day.code + '|searchable">' + collection_day_summary( collection_day ) + '</option>'
						else
							html += '<option value="' + collection_day.code + '">' + collection_day_summary( collection_day ) + '</option>'
						end
					html += '<optgroup>'
				end

			html += '</select>'
    html += '</div>'
  end

%>
<%= html.html_safe %>