<% provide :title, t('views.annotations.depublish.title') %>

<div class="section top">
  
  <h2><%= yield :title %></h2>
  
  <p><%= t 'views.annotations.depublish.question' %></p>

  <ul>
    <li><strong><%= t "activerecord.models.#{@annotation.annotatable_type.underscore.downcase}" %>:</strong> <%= link_to truncate(annotatable_title(@annotation.annotatable), :length => 140, :separator => ' '), annotatable_path(@annotation.annotatable) %></li>
    <li><strong><%= t 'activerecord.models.annotation' %>:</strong> <%= @annotation.text %></li>
  </ul>

  <%= semantic_form_for @annotation, :url => depublish_annotation_path(@annotation), :html => { :method => :put } do |form| %>
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button :label => t('actions.depublish') %>
      <%= form_cancel_link annotatable_path(@annotation.annotatable) %>
    <% end %>
  <% end %>

</div>
