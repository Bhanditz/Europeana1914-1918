<% 
  provide :title, t('views.tags.flag.title') 
  taggable_type = taggable_type(@taggable)
%>

<div class="section top">
  
  <h2><%= yield :title %></h2>
  
  <p><%= t 'views.tags.flag.question' %></p>
  
  <ul>
    <li><strong><%= t 'activerecord.models.contribution' %>:</strong> <%= link_to @taggable.title, @taggable %></li>
    <li><strong><%= t 'activerecord.models.tag' %>:</strong> <%= @tag.name %></li>
  </ul>

  <%= semantic_form_for @tag, :url => send(:"flag_#{taggable_type}_tag_path", @taggable, @tag), :html => { :method => :put } do |form| %>
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button :label => t('formtastic.actions.tag.flag') %>
      <%= form_cancel_link @taggable %>
    <% end %>
  <% end %>

</div>
