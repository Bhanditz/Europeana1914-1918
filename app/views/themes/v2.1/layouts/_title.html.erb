<%
	title = ''

	if @query && @query.length > 0
		title += @query
		title += ' - '
	end

	if @term && @term.length > 0
		title += @term
		title += ' - '
	end

	title += configuration(:site_name)

	title = h(title)

	if content_for(:title).present?
		title += ' - '
		title += yield(:title)
	end

%>
<%= raw title -%>
