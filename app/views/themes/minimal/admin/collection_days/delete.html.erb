<% provide :title, t('views.admin.collection_days.delete.title') %>

<div class="section top">
  
  <h2><%= yield :title %></h2>

  <p><%= raw t 'views.admin.collection_days.delete.question', :code => "<strong>#{@collection_day.code}</strong>" %></p>

  <p><%= t 'views.common.permanent' %></p>

  <%= semantic_form_for [ 'admin', @collection_day ], :html => { :method => :delete } do |form| %>
    <%= form.buttons do %>
      <%= redirect_field %>
      <%= form.commit_button :label => t('formtastic.actions.delete') %>
      <%= form_cancel_link admin_collection_days_path %>
    <% end %>
  <% end %>

</div>
