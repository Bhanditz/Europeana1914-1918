<h3>
  <a class="facet-section icon-arrow-7"><%= t('views.search.facets.matches_for' ) %></a>
</h3>

<ul class="keywords">
  <%- for link in links_for_selected_filters(query, facets) -%>
    <li>
      <%= link_to link[:reduce][:text], link[:reduce][:url] %>
      <%= link_to image_tag('style/icons/cancel.png', :alt => t('actions.remove')), link[:remove][:url], { :title => t('actions.remove') } %>
    </li>
  <%- end -%>
</ul>

