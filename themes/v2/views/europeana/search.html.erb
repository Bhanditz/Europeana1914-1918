<%
  @javascripts[:autocomplete] = true
  @javascripts[:masonry] = true
  @javascripts[:search] = true
  @javascripts[:tabs] = true
  @tab_selected = 1
  @title = t('views.contributions.search.heading')
%>
<div class="section top">
  
  <h2><%= @title %></h2>

  <div id="results">
  
    <%= render :partial => '/shared/search_form', :locals => { :query => @query, :url => search_europeana_path } %>
    
    <div id="results-tabs">
      <ul>
        <li><%= link_to '1914-1918', @field.present? ? term_search_contributions_path(@field.name, @term) : search_contributions_path(:q => @query) %></li>
        <li><%= link_to 'Europeana', '#results-europeana' %></li>
      </ul>
    
      <div id="results-europeana">
        <% if @results.size == 0 -%>
          <p><%= t('views.contributions.search.no_matches') %></p>
        <% else -%>    
          <%=
          render :partial => 'search-results',
          :locals => {
            :results => @results,
            :query => @query,
            :term => @term
          }
          %>    
        <% end -%>
      </div><!-- /#results-europeana -->
    
    </div><!-- /#results-tabs -->
    
  </div>
  
</div>

