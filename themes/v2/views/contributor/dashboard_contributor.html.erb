<% @title = t('views.contributor.dashboard_contributor.title') %>
<section class="border-top">
  
  <p><%= t('views.contributor.index.p1') %></p>
  <ol class="number">
    <li><%= t('views.contributor.index.item1') %></li>
    <li><%= t('views.contributor.index.item2') %></li>
    <li><%= t('views.contributor.index.item3') %></li>
    <li><%= t('views.contributor.index.item4') %></li>
    <li><%= raw t('views.contributor.help.how_to_use.item5') %></li>
  </ol>
  
  
  
  <div class="link-buttons">
    <%= link_to t('views.contributor.dashboard_contributor.links.new'), new_contribution_path %>
  </div>
  
  
  
  <h2><%= t('views.contributor.dashboard_contributor.headings.contributions') %></h2>

    <% if @draft_contributions.present? || @submitted_contributions.present? || @approved_contributions.present? %>
      <p><%= t('views.contributor.dashboard_contributor.p1') %></p>
      <div class="contributions-drafts">
        <%- if @draft_contributions.present? -%>
          <%= render :partial => 'contributions', :object => @draft_contributions, :locals => { :caption => t('views.contributor.dashboard_contributor.captions.draft') } %>
        <%- else -%>
          <p><%= t('views.contributor.dashboard_contributor.empty.draft') %></p>
        <%- end -%>
      </div>
      
      <div class="contributions-submitted">
        <%- if @submitted_contributions.present? -%>
          <%= render :partial => 'contributions', :object => @submitted_contributions, :locals => { :caption => t('views.contributor.dashboard_contributor.captions.submitted') } %>
        <%- else -%>
          <p><%= t('views.contributor.dashboard_contributor.empty.submitted') %></p>
        <%- end -%>
      </div>
      
      <div class="contributions-approved">
        <%- if @approved_contributions.present? -%>
          <%= render :partial => 'contributions', :object => @approved_contributions, :locals => { :caption => t('views.contributions.status.approved') } %>
        <%- else -%>
          <p><%= t('views.contributor.dashboard_contributor.empty.approved') %></p>
        <%- end -%>
      </div>
      
    <% else %>
      
      <p><%= t('views.contributor.dashboard_contributor.empty.all') %></p>
      
    <% end %>
</section>
