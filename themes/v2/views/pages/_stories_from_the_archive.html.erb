<%- expires_in = 60.minutes if local_assigns[:expires_in].nil? -%>
<%- locale = I18n.locale if local_assigns[:locale].nil? -%>
<%- cache("stories_from_the_archive_#{locale}", :expires_in => expires_in) do -%>

<ul>
  
  <%- for entry in stories_from_the_archive(locale) -%>
  
    <%- unless entry.blank? -%>
      
      <li>
        
        <%= raw relocale_link(entry.content) %>
        
      </li>
      
    <%- end -%>
    
  <%- end -%>

</ul>

<% end -%>
