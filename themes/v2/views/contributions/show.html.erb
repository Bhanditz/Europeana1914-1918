<% @javascripts[:gmap_display] = true %>
<% @title = t('views.contributions.show.title') %>


<div id="story-images">
  
  <ul id="image-viewer">
    <% if @contribution.attachments.present? -%>
      <%= render :partial => '/attachments/display-view' %>
    <% end %>
  </ul>
  
  <ul id="thumbnail-viewer">
    <% if @contribution.attachments.present? -%>
      <%= render :partial => '/attachments/display-thumbnails' %>
    <% end %>
  </ul>
  
</div>


<dl id="story-metadata">
  
    <%=
    render :partial => '/metadata/display',
    :locals => {
      :contribution => @contribution,
      :metadata => @contribution.metadata,
      :field_options => {
        :name => [
          'description',
          'alternative',
          'author',
          'subject',
          'keywords',
          # 'date',
          'date_from', # use this field to summarize the date fields
          'date_to',
          'location_map',
          'location_placename',
          'file_type',
          'source',
          'format',
          'content',
          'contributor_behalf',
          'page_number',
          'page_total',
          'editor_pick',
          'cataloguer',
          'notes',
          'lang',
          'forces',
          'theatres',
          'collection_day',
          'lang_other',
          'object_side',
          'cover_image',
          'creator_family_name',
          'creator_given_name',
          'license',
          'character1_family_name',
          'character1_given_name',
          'character2_family_name',
          'character2_given_name',
          'attachment_description',
          'summary',
          'ticket',
          'location_zoom'
        ],
        :name_order => true
      }
    }
  %>
  
</dl>


<div id="story-translate">
  
  <b>Translate details:</b><br/>
  
  <select>    
    <option></option>    
  </select>
  
</div>


<div id="story-map">
  
</div>
