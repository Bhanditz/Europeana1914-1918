<b><%= t('views.contributions.search.matches-for') %></b> <%= query %> ( <%= @contributions.size %> stories  )
  
  <ul id="stories">    
    <% for contribution in contributions.each %>
      <% if contribution.attachments.with_file.present? %>
        <li>
          <%= link_to attachment_preview(contribution.attachments.with_file.first, :preview), contribution, :title => t('views.contributions.search.links.titles.show_contribution') %>
          <b><%= contribution.title %></b><br/>
          <br/>
          <%= contribution.metadata['field_alternative'] %>
        </li>
      <% end %>
    <% end %>  
  </ul>
  
<%= will_paginate contributions %>