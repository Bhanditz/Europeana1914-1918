    <div id="contributions-featured" class="carousel">	
		<ul>		
		  <% if local_assigns[:attachments].present? -%>
			<%=
			  render :partial => '/attachments/display-images',
			  :locals => {
  				:size => :medium,
  				:prettyphoto => true,
  				:attachments => attachments,
  				:contribution => contribution
			  }
			%>
		  <% end %>
		</ul>	  
		<div class="carousel-overlay"></div>
	  </div>
	  
	  
	  <div id="contributions-thumbnails" class="carousel">		
		  <ul>
			<% if local_assigns[:attachments].present? -%>
			  <%= 
			    render :partial => '/attachments/display-images', :locals => {
			      :size => :preview, 
			      :attachments => attachments, 
			      :contribution => contribution 
		      } 
	      %>
			<% end %>
		  </ul>		
		  <div class="carousel-overlay"></div>
	  </div>
	  
	  <div><%= will_paginate(attachments) %></div>
	  
	  <div>Total: <%= attachments.total_entries %></div>
